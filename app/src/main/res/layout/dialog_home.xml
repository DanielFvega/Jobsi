<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ibClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="#00000000"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_clear_24" />

        <TextView
            android:id="@+id/tvState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ibClose"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="¿Qué quieres hacer?"
            android:textAlignment="center"
            android:textColor="@color/grisClaro"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/rlSell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvState"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/ivCart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_cart" />

            <Button
                android:id="@+id/btnSell"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@id/ivCart"
                android:backgroundTint="@color/colorPrimary"
                android:text="CULTIVA                   VENDE"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlSell">

            <View
                android:id="@+id/vista3"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/disenoet"
                android:backgroundTint="#D5D8D8" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlBuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlSell"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btnBuy"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_toStartOf="@id/ivPlant"
                android:backgroundTint="#98D42D"
                android:text="COMPRAR"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ivPlant"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_plant" />

        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>