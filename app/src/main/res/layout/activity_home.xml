<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".HomeLogin">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_linea9"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.53" />

    <ImageView
        android:id="@+id/ivExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_exit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/h_linea2"
        app:layout_constraintStart_toStartOf="@id/glLeft"
        app:layout_constraintEnd_toEndOf="@id/glRight"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_bias="0.9"/>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="#00000000"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@+id/h_linea6"
        app:layout_constraintEnd_toEndOf="@id/glRight"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/glLeft"
        app:layout_constraintTop_toTopOf="@+id/h_linea2">

        <ImageView
            android:id="@+id/ivUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_person" />

    </androidx.cardview.widget.CardView>



    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="40dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/h_linea9"
        app:layout_constraintEnd_toStartOf="@+id/ivEdit2"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="@id/glLeft"
        app:layout_constraintTop_toTopOf="@+id/h_linea6"
        app:layout_constraintVertical_bias="0.424"
        app:srcCompat="@drawable/ic_edit" />

    <ImageView
        android:id="@+id/ivEdit2"
        android:layout_width="40dp"
        android:layout_height="0dp"
        android:layout_marginStart="226dp"
        app:layout_constraintBottom_toTopOf="@+id/h_linea9"
        app:layout_constraintEnd_toEndOf="@id/glRight"
        app:layout_constraintStart_toEndOf="@+id/ivEdit"
        app:layout_constraintTop_toTopOf="@+id/h_linea6"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_camera" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loginlinear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bordelogin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/h_linea9">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h_linea10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h_linea11"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.15" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h_linea13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h_linea15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.75" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/h_linea16"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glLeft2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glRight2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="+0.9" />


        <TextView
            android:id="@+id/Welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:text="BIENVENIDO"
            android:textColor="#5D5D5D"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/h_linea11"
            app:layout_constraintEnd_toEndOf="@id/glRight2"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/Name"
            app:layout_constraintTop_toTopOf="@id/h_linea10"
            app:layout_constraintVertical_bias="1" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:includeFontPadding="false"
            android:text="BRAYAN"
            android:textColor="#5D5D5D"
            android:textSize="70dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/h_linea13"
            app:layout_constraintEnd_toEndOf="@id/glRight2"
            app:layout_constraintStart_toStartOf="@id/glLeft2"
            app:layout_constraintTop_toTopOf="@id/h_linea11" />

        <ImageView
            android:id="@+id/ivGloves"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toTopOf="@+id/h_linea15"
            app:layout_constraintEnd_toEndOf="@id/glRight2"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@id/glLeft2"
            app:layout_constraintTop_toTopOf="@+id/h_linea13"
            app:srcCompat="@drawable/ic_gloves" />

        <LinearLayout
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_red"
            android:backgroundTint="@color/colorPrimary"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:onClick="btnStart"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/h_linea16"
            app:layout_constraintEnd_toStartOf="@id/glRight2"
            app:layout_constraintStart_toEndOf="@id/glLeft2"
            app:layout_constraintTop_toBottomOf="@id/h_linea15">


            <TextView
                android:id="@+id/Inicia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alata"
                android:text="COMENCEMOS"
                android:textColor="#FFF"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/alata"
            android:gravity="center"
            android:text="@string/version"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/glRight2"
            app:layout_constraintStart_toEndOf="@id/glLeft2"
            app:layout_constraintTop_toTopOf="@+id/h_linea16" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_linea2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.09" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/h_linea6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.43" />

</androidx.constraintlayout.widget.ConstraintLayout>